<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <!--  ListRow Left side Thumbnail image -->
    <LinearLayout
        android:id="@+id/listThumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dp"
        android:padding="3dp">


        <!--Image for book-->
        <ImageView
            android:id="@+id/listBookCover"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:src="@drawable/ic_book_stack_b"
           />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/listBookBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"

        android:layout_alignParentRight="true"
        android:orientation="vertical">
        <!--android:layout_toRightOf="@+id/listThumbnail"-->

        <!-- book title-->
        <TextView
            android:id="@+id/listBookTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/listThumbnail"
            android:text="Titel" />

        <!-- book author-->
        <TextView
            android:id="@+id/listBookAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listBookTitle"
            android:text="Autor" />
    </LinearLayout>

</RelativeLayout>